<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 style="color: #B3BF54;">Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post"
            enctype="multipart/form-data">
              <input type="hidden" value="{{novedad.id}}" name="id">
              <div class="form-group">
                <label for="" style="color:#B3BF54 ;">Titulo</label>
                <input type="text" class="form-control" value="{{novedad.Titulo}}" name="titulo">
              </div><br>
              <div class="form-group">
                <label for="" style="color: #B3BF54;">Subtitulo</label>
                <input type="text" class="form-control" value="{{novedad.Subtitulo}}" name="subtitulo">
              </div><br>
              <div class="form-group">
                <p style="color:#B3BF54;">
                  <label>Imagen: <input type="file" name="imagen" id="imagen /"></label>
                </p>
                <p style="color: #B3BF54;">
                  <label><input type="checkbox" name="img_delete" id="img_delete" value="1" style="color: #B3BF54;">
                  Eliminar imagen actual?</label>
                  <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </p>
              </div>
               <div class="form-group">
                <label for="" style="color: #B3BF54;">Cuerpo</label>
                <textarea name="cuerpo" class="form-control">{{novedad.Cuerpo}}</textarea>
              </div><br>
              <button type="submit" class="btn btn-primary" style="color:black">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>