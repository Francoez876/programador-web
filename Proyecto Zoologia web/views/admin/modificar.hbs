<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 style="color: #B3BF54;">Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
              <input type="hidden" value="{{novedad.id}}" name="id">
              <div class="form-group">
                <label for="" style="color:#B3BF54 ;">Titulo</label>
                <input type="text" class="form-control" name="id" value="{{novedad.Titulo}}">
              </div><br>
              <div class="form-group">
                <label for="" style="color: #B3BF54;">Subtitulo</label>
                <input type="text" class="form-control" name="subtitulo" value="{{novedad.Subtitulo}}">
              </div><br>
               <div class="form-group">
                <label for="" style="color: #B3BF54;">Cuerpo</label>
                <textarea name="cuerpo" class="form-control">{{novedad.Cuerpo}}</textarea>
              </div><br>
              <button type="submit" class="btn btn-primary" style="color:black">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>